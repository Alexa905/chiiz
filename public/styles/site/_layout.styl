/*----------------------------- GALLERY -----------------------------*/
#slider {
  position relative
  margin-bottom 20px
  width 100%
  overflow hidden
  height: 100%;
}

.gallery-image-big {
  position absolute
  right 0
  left 0
  transition opacity 1s ease-in-out
  opacity 0
  z-index 0
  margin auto
}

.gallery-image-big img {
  width 100%
  height auto
}

.gallery-image-big.active {
  opacity 1
  z-index 10
}

.portfolio-container {
  max-width: 1026px;
  margin: auto;
  position relative
  height 0
}

.gallery-images {
  position relative
  padding-left: 15px;
  padding-right: 15px;
  margin 0 auto 90px auto;
}

.gallery-image {
  margin-bottom 25px
  cursor pointer

}

.gallery-control {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 15%;
  font-size: 20px;
  color: #fff;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
  cursor: pointer;
  z-index 20
}

.gallery-control.right {
  left auto
  right 0
  background-repeat repeat-x
  transition background 0.5s ease-in-out
}

.gallery-control .arrow {
  position absolute
  width: 22px;
  height: 83px;
  transition opacity 5s
  font-size: 30px;
  opacity 1
  top: 0
  bottom: 0
  margin auto
  left: 40px;
  outline none
  background url('../images/arrow-slider.png') no-repeat;
}

.gallery-control .arrow:focus, .gallery-control .arrow:hover {
  text-decoration none
  outline: none
  box-shadow none
}

.gallery-control:hover {
  opacity: 0.9
  transition opacity 0s
}

.gallery-control.right .arrow {
  background-position 0 -83px;
  right: 40px;
  left auto
}

.thumb {
  position relative
  transition 0.5s ease-in-out
  margin-bottom: 2.3%;

}

.thumb img {
  transition 0.5s ease-in-out
}

.thumb.active img, .thumb img:hover {
  -webkit-filter: brightness(60%)
  filter: brightness(60%)
}

