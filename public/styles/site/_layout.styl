/*----------------------------- MAIN START-----------------------------*/
body {
  color: #282828;
}

h2 {
  text-transform uppercase
  text-align center
  font-family: 'Open Sans', sans-serif;
  font-size 26px
  font-style normal
  margin-bottom: 37px;
  line-height: 36px;
}

h3 {
  font-family: 'Open Sans', sans-serif;
  font-size 24px
  text-transform uppercase
  font-style normal
  text-align center
}

h4 {
  font-family: 'Open Sans', sans-serif;
  font-size: 20px;
  line-height: 40px;
  font-style: normal;
  text-align: center;
  margin-bottom: 20px;
}

h5 {
  font-family: 'Open Sans', sans-serif;
  font-size 18px
  line-height 24px
  font-weight 500
  margin-bottom 15px
  text-transform uppercase
}

ul.dashed {
  list-style-position: outside;
  padding: 0;
  margin: 0 0 20px;
}

ul.dashed li {
  list-style: none;
  line-height 20px
  margin-bottom 5px
  position relative
}

ul.dashed li:before {
  content: '\2013'
  position absolute
  left: -15px;

}

.arrow {
  position absolute
  width: 22px;
  height: 83px;
  transition opacity 5s
  font-size: 30px;
  top: 0
  bottom: 0
  margin auto
  left: 40px;
  outline none
  transform none
  background url('../images/arrow-slider.png') no-repeat;
}

.arrow-right {
  background-position 0 -83px;
  left auto
  right 40px
}

.container
  max-width: 1200px;
  position relative
  width auto
  padding-top 20px

section {
  margin-bottom 50px
}

#pagination-container {
  display block
  margin 0 auto
  text-align center
  z-index 10
  position relative
  clear: both;
  font-family: 'Open Sans', sans-serif;

}

.paginationjs-pages {
  display inline-block
  margin: 22px 0 17px 0;
  font-size 14px
  font-family: 'Open Sans', sans-serif
  padding-left 0
}

.paginationjs-pages ul {
  padding 0
  margin 0
}

.paginationjs-pages li {
  display inline-block
  padding: 6px;
}

.pagination > li > a {
  padding: 6px;
}

.pagination > li > a {
  border none
}

.paginationjs-prev a, .paginationjs-next a {
  color: #fff
  height 20px
}

.pagination-btn, .paginationjs-prev a, .paginationjs-next a {
  width 11px
  height 22px
  display block
  background url('../images/pagination.png') no-repeat;
  background-position 0 -22px
}

.pagination-btn.right, .paginationjs-next a {
  background-position 0 0
}

.pagination > .active > a, .pagination > .active > span, .pagination > .active > a:hover, .pagination > .active > span:hover, .pagination > .active > a:focus, .pagination > .active > span:focus {
  background none
  border: none
  color #282828
}

.paginationjs-page a
  position: relative;
  line-height: 1.428571429;
  text-decoration: none;
  color: #337ab7;
  background-color: #fff;
  margin-left: -1px;

.paginationjs-page.active > a, .paginationjs-page.active > a:hover,
.paginationjs-page.active > span:hover, .paginationjs-page.active > a:focus {
  background none
  border: none
  color #282828
  text-decoration none
}

/*----------------------------- MAIN END -----------------------------*/
/*----------------------------- HEADER START -----------------------------*/
#header
  padding-top: 50px;

#header .header-logo-wrapper
  text-align center
  padding-top: 38px;

#header .main-logo
  display inline-block
  width 296px
  height 75px
  background url('../images/logo.gif') no-repeat 100% 100%;
  background-size cover
  outline: none;

#header .header-logo
  margin-bottom 15px

.header-description
  font-style italic
  font-size 16px
  margin-top 14px
  margin-bottom 40px

.navbar {
  min-height 48px
}

#header .navbar-toggle
  float left
  padding 0

.navbar-fixed-top
  background: #5d5861
  border: none

#header .navbar-header
  position: absolute;
  margin-left: 0;
  margin-right: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 100;
  padding: 0;

#header .navbar-default .navbar-toggle {
  border none
  background-color: transparent
  z-index: 1000;
  -webkit-transform: translate(0, -50%);
  -ms-transform: translate(0, -50%);
  -o-transform: translate(0, -50%);
  transform: translate(0, -50%);
  position: absolute;
  top: 16px;
  display: block;
  padding: 20px;
  left: 0;
}

#header .navbar-default .navbar-toggle:hover {
  background-color: transparent

}

.navbar-toggle .patty {
  -webkit-transition: all .2s ease;
  -o-transition: all .2s ease;
  transition: all .2s ease;
  position: relative;
  width: 44px;
  height: 2px;
  border-radius: 2px;
  background rgba(255, 255, 255, 1)
}

.navbar-toggle .patty:before, .navbar-toggle .patty:after {
  -webkit-transition: all .2s ease;
  -o-transition: all .2s ease;
  transition: all .2s ease;
  position: absolute;
  z-index: 1;
  display: block;
  width: 44px;
  height: 2px;
  border-radius: 2px;
  background: rgba(255, 255, 255, 1);
  content: ''
}

.navbar-toggle .patty:before {
  top: -7px
}

.navbar-toggle .patty:after {
  top: 7px
}

.navbar-toggle.open .patty {
  background: none
}

.navbar-toggle.open .patty:before {
  -webkit-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  -o-transform: rotate(-45deg);
  transform: rotate(-45deg);
  top: 15px;
}

.navbar-toggle.open .patty:after {
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  transform: rotate(45deg);
  top: 15px;
}

.navbar-default .navbar-collapse {
  border none
  box-shadow none
  min-height 0
  padding-left 80px
  overflow: hidden;

}

.navbar-default .navbar-nav {
  margin-bottom 20px
  margin-top 15px
  display: flex;
  justify-content space-around
}

.navbar-default .navbar-nav > li
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  text-transform: uppercase;

.navbar-default .navbar-nav > li, .navbar-default .navbar-nav > li > a
  font-size 20px
  font-family: 'Open Sans', sans-serif;
  font-weight 600
  color white
  text-transform uppercase

.navbar-default .navbar-nav > li > a {
  padding-top: 4px;
}

.navbar-default .navbar-nav > li > a:hover, .navbar-nav > li > ul > li > a:hover,
.navbar-default .navbar-nav > li > a:focus, .navbar-default .navbar-nav > li > a:active
  text-decoration none
  background none
  outline none

.navbar-nav > li > ul > li > a
  font-size 14px
  font-family: 'Open Sans', sans-serif;
  color white
  text-transform none
  font-weight 400

.navbar-nav > li > ul > li > a:hover
  color: #333;

.social-icons
  top 0
  padding-top: 12px;
  position absolute
  right: 20px;

.social-icons a
  width 24px
  height 22px
  display inline-block
  background url('../images/social-icons.png')

.social-icons .fb
  background-position 49px 0

.social-icons .insta
  background-position 24px 0

.list-inline > li
  display: inline-block;
  padding-left: 5px;
  padding-right: 5px;
  vertical-align: top;

